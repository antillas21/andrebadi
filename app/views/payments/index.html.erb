<div class="row">
  <div id="panel" class="span12">
    <div class="row">
      <div class="span4">
        <a class="btn" id="add-payment"><i class="icon icon-plus-sign"></i> Add Payment</a>
      </div>
      <div class="span4"></div>
      <form class="form-search span-4">
        <div class="input-append">
          <input type="text" class="span2 search-query input-large" name="query" id="query" />
          <button type="submit" class="btn" id="search"><i class="icon icon-search"></i> </button>
        </div>
      </form>
    </div>
  </div>

  <div id="new" class="span12"></div>

  <div id="payments" class="span12">
    <table id="payments" class="table table-striped">
      <thead>
        <tr>
          <th>Payments</th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td>No payments just yet.</td>
      </tr>
      <tr>
        <td class="span8">
          <div class="customer-data">
            {{ customer.name }}
          </div>
          <div class="transaction-date">
            {{ formattedDate created_at }}
          </div>
          <div class="actions">
            <a href="/#/payments/{{ id }}"><i class="icon-eye-open"></i> View</a>
          </div>
        </td>
        <td class="span4">
          <div class="amount">{{ toCurrency amount }}</div>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
