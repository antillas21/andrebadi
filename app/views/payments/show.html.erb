<div id="payment-header">
  <h3>RECEIPT #{{ uid }}</h3>
</div>

<div id="payment-data" class="well">
  <div class="">
    <div class="amount large">{{ toCurrency amount }}</div>
    <div class="payment-date">Date received: {{ formattedDateOnly created_at }}</div>
  </div>
  <hr />
  Received from: <br />
  <strong><a href="/#/customers/{{ customer.id }}">{{ customer.name }}</a></strong>
  <div class="concept">As partial payment on account balance.</div>
  <hr />
  <div class="monotype">
    {{ toCents amount }}||{{ customer.uid }}||{{ uid }}
  </div>
</div>

<div id="messages">
  <div class="flash alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    Payment Receipt has been queued for delivery.
  </div>
</div>

<div id="payment-actions">
  <div class="form-actions">
    <a href="#" class="btn btn-primary" id="email-payment"><i class="icon-envelope"></i> Email</a>
    <a href="#" class="btn btn-info" id="edit-payment"><i class="icon-edit"></i> Edit</a>


    <div class="btn-group">
      <a class="btn dropdown-toggle btn-danger" data-toggle="dropdown" href="#">
        <i class="icon icon-remove-sign"></i> Delete
      </a>
      <ul class="dropdown-menu">
        <li><a href="#" id="delete-payment">Yes, Delete</a></li>
      </ul>
    </div>
  </div>
  
</div>
