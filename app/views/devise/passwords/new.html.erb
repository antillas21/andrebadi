<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'bordered form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true %>
  </div>

  <div class="form-actions"><%= f.submit "Send me reset password instructions", class: 'btn btn-warning' %></div>
<% end %>

<%= render "devise/shared/links" %>
