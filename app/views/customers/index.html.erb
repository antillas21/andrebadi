<div class="row">

  <div id="panel" class="span12">
    <div class="row">
      <div class="span4">
        <a class="btn" id="add-customer"><i class="icon icon-plus-sign"></i> Add Customer</a>
      </div>
      <div class="span4"></div>
      <form class="form-search span-4">
        <div class="input-append">
          <input type="text" class="span2 search-query " name="query" id="query" />
          <button type="submit" class="btn btn-mini" id="search"><i class="icon icon-search"></i> </button>
        </div>
      </form>
    </div>
  </div>

  <div id="new" class="span12">
    <legend>New Customer</legend>
    <div class="control-group">
      <input type="text" placeholder="Name" name="name" value="{{ name }}" />
    </div>
    <div class="control-group">
      <input type="text" placeholder="Email" name="email" value="{{ email }}" />
    </div>
    <div class="control-group">
      <input type="text" placeholder="Phone" name="phone" value="{{ phone }}" /><br />
    </div>
  </div>

  <div id="customers" class="span12">
    <table id="customers" class="table table-striped">
      <thead>
        <tr>
          <th>Customers</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>No records found</td>
        </tr>
        <tr>
          <td>
            <div itemscope="" itemtype="http://schema.org/Person">
              <div class="right-side">
                Due: {{ toCurrency balance }}
              </div>
              <div>
                <strong><span itemprop="name"><a href="/#/customers/{{ id }}">{{ name }}</a></span></strong>
              </div>
              <p>
                <span itemprop="email">
                  email: <a href="mailto:{{ email }}">{{ email }}</a>
                </span>
              </p>
              <p>
                <span itemprop="telephone">
                  tel: <a href="tel:{{ phone }}">{{ phone }}</a>
                </span>
              </p>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
</div>
