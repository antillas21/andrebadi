   <div data-role="header" data-position="fixed" data-id="myheader">
      <span class="ui-title"><%= title %></span>
        <div data-role="controlgroup" data-type="horizontal" class="ui-btn-right">
          <%= link_to 'Home', root_path, data: { role: "button", icon: "home" } %>
          <% if current_user %>
            <%= link_to 'Dashboard', dashboard_path, data: { role: "button", icon: "grid" } %>
            <%= link_to 'My Account', edit_user_registration_path, data: { role: "button", icon: "gear" } %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { role: "button", icon: "delete" } %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, data: { role: "button", icon: "bars" } %>
          <% end %>
        </div>
    </div>

