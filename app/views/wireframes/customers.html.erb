<h1>Customers</h1>
<ul data-role="listview" data-inset="true">
  <% @customers.find_each do |customer| %>
    <li>
      <a href="<%= wireframe_customer_path(customer) %>">
        <h2><%= customer.name %></h2>
        <p><strong>Last payment on: </strong><%= customer.last_payment.payment_date %></p>
        <p><strong>Amount: </strong><%= number_to_currency(customer.last_payment.amount / 100) %></p>
      </a>
    </li>
  <% end %>
</ul>
