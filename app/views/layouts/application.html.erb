<!DOCTYPE html>
<html class="ui-mobile">
<head>
  <title>Sale Tracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <% if current_user %>
    <meta name="auth-token" content="<%= current_user.authentication_token %>">
  <% end %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div data-role="page">
    <div data-role="header" data-position="fixed">
      <span class="ui-title"></span>
        <div data-role="controlgroup" data-type="horizontal" class="ui-btn-right">
          <%= link_to 'Home', root_path, data: { role: "button", icon: "home" } %>
          <% if current_user %>
            <%= link_to 'Dashboard', dashboard_path, data: { role: "button", icon: "grid" } %>
            <%= link_to 'My Account', edit_user_registration_path, data: { role: "button", icon: "gear" } %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { role: "button", icon: "delete" } %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, data: { role: "button", icon: "bars" } %>
          <% end %>
        </div>
    </div>
    <div data-role="content">
        <% flash.each do |key, value| %>
          <div id="flash_messages" class="flash_message ui-bar ui-bar-e">
            <%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
          </div>
        <% end %>

      <%= yield %>
    </div>
    <% if current_user %>
      <div data-role="footer" data-position="fixed">
        <div>
          <p><strong>Your API token:</strong> <%= current_user.authentication_token %></p>
        </div>
        <div data-role="navbar">
          <ul>
            <li><a href="#" class="ui-btn-active">Customers</a></li>
            <li><a href="#">Sales</a></li>
            <li><a href="#">Payments</a></li>
            <li><a href="#">Reports</a></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <%= javascript_include_tag "application" %>
  <% yield :js %>
</body>
</html>
