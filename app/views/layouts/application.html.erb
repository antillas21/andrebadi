<!DOCTYPE html>
<html class="ui-mobile">
<head>
  <title>Sale Tracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div data-role="page">
    <div data-role="header">
      <% if current_user %>
        <%= link_to 'Dashboard', root_path, data: { icon: "home" } %>
      <% end %>
      <h1>Sale Tracker</h1>
      <% if current_user %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { icon: "close" } %>
        <%# <a href="#" data-icon="bars">Logout</a> %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, data: { icon: "bars" } %>
      <% end %>
    </div>
    <div data-role="content">
      <div id="flash_messages" class="flash_message twelve columns centered">
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
        <% end %>
      </div>

      <%= yield %>
    </div>
    <% if current_user %>
      <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
          <ul>
            <li><a href="#" class="ui-btn-active">Customers</a></li>
            <li><a href="#">Sales</a></li>
            <li><a href="#">Payments</a></li>
            <li><a href="#">Reports</a></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>


  <%= javascript_include_tag "application" %>

</body>
</html>
